{
  "name": "rtens/domin",
  "description": "General purpose DDD-friendly administration interface",
  "keywords": [
    "admin",
    "administration",
    "CMS",
    "DDD",
    "domain model"
  ],
  "homepage": "http://github.com/rtens/domin",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Nikolas Martens",
      "email": "Nikolas.M@rtens.org",
      "homepage": "http://rtens.org"
    }
  ],
  "require": {
    "watoki/factory": "*",
    "watoki/reflect": "*"
  },
  "suggest": {
    "watoki/curir": "Supported delivery system.",
    "silex/silex": "Supported delivery system",
    "mobiledetect/mobiledetectlib": "To enable mobile-specific client-side code only when on mobile.",
    "erusev/parsedown": "To parse Action and Parameter descriptions for HTML output.",
    "league/climate": "Used by some CLI components"
  },
  "require-dev": {
    "rtens/scrut": "*",
    "rtens/mockster": "*"
  },
  "autoload": {
    "psr-4": {
      "rtens\\domin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\rtens\\domin\\": "spec/"
    }
  }
